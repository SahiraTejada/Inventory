@model IEnumerable<Inventory.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="mt-5">Products</h1>
<p class="d-flex align-items-center mt-3 mb-4">
    <a class="btn btn-info d-flex align-items-center justify-content-center" role="button" asp-action="Create" style="color:white; font-weight:700"><i class="bi bi-plus icon-action" style="font-size:25px"></i>Create New</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModelYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
             <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModelYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.BrandId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
       
            <td >
                <a class="btn btn-primary " role="button" asp-action="Edit" asp-route-id="@item.ProductId">
                    <i class="bi bi-pencil-square icon-action"></i>
                </a>
            </td>
            <td >
                <a class="btn btn-warning" role="button" asp-action="Details" asp-route-id="@item.ProductId">
                    <i class="bi bi-eye-fill icon-action"></i>
                </a>

            </td>
            <td >
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.ProductId">
                    <i class='bx bxs-trash icon-action'></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
