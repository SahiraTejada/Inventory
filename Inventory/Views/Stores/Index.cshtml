@model IEnumerable<Inventory.Models.Store>

@{
    ViewData["Title"] = "Stores";
}

<h1 class="mt-5">Stores</h1>
<p class="d-flex align-items-center mt-3 mb-4">
    <a class="btn btn-info d-flex align-items-center justify-content-center" role="button" asp-action="Create" style="color:white; font-weight:700"><i class="bi bi-plus icon-action" style="font-size:25px"></i>Create New</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StoreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                <a class="btn btn-primary " role="button" asp-action="Edit" asp-route-id="@item.StoreId">
                    <i class="bi bi-pencil-square icon-action"></i>
                </a>
            </td>
            <td >
                <a class="btn btn-warning" role="button" asp-action="Details" asp-route-id="@item.StoreId">
                    <i class="bi bi-eye-fill icon-action"></i>
                </a>    
            </td>
            <td >
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.StoreId">
                    <i class='bx bxs-trash icon-action'></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
