@model IEnumerable<Inventory.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-5">Order</h1>

<p class="d-flex align-items-center mt-3 mb-4">
    <a class="btn btn-info d-flex align-items-center justify-content-center" role="button" asp-action="Create" style="color:white; font-weight:700"><i class="bi bi-plus icon-action" style="font-size:25px"></i>Create New</a>
</p>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Staff)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Store)
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Staff.StaffId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Store.StoreId)
            </td>

                  <td class="text-center" >
                    <a class="btn btn-primary " role="button" asp-action="Edit" asp-route-id="@item.OrderId"><i class="bi bi-pencil-square icon-action"></i></a>
                            </td>
                        <td class="text-center" >
                    <a class="btn btn-warning" role="button" asp-action="Details" asp-route-id="@item.OrderId"><i class="bi bi-eye-fill icon-action"></i></a>

                        </td>
                    <td class="text-center">

                    <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.OrderId"><i class='bx bxs-trash icon-action'></i></a>
                            </td>
        </tr>
}
    </tbody>
</table>
